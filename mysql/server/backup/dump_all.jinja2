set -e

# limit resources usage
renice -n 19 -p $$ > /dev/null
ionice -c idle -p $$
XZ_DEFAULTS=--memlimit={{ salt['pillar.get']('backup:xz_memlimit', 64) }}MiB

SUFFIX="$(/usr/local/bin/backup-gen-suffix.py)"
export TERM=dumb
/usr/bin/mysqldump -p{{ salt['password.pillar']('mysql:password') }} -uroot --single-transaction --all-databases | xz > /tmp/mysql-all-$SUFFIX.sql.xz
/usr/local/bin/backup-store /tmp/mysql-all-$SUFFIX.sql.xz
