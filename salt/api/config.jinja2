{%- set external_auth = salt['pillar.get']('salt_api:external_auth', {}) %}
{%- if (external_auth|length > 0) %}
external_auth:
  {%- for authen_system in external_auth %}
  {{ authen_system }}:
    {%- for username in external_auth[authen_system] %}
    {{ username }}:
      {% set acl = external_auth[authen_system][username]['acl'] %}
      {%- for id_or_func in acl %}
        {%- if acl[id_or_func] is iterable %}
      - '{{ id_or_func }}':
          {%- for func in acl[id_or_func] %}
        - {{ func }}
          {%- endfor %}
        {%- else %}
          {%- if '@' in id_or_func %}
          {# at top lvl, salt only quote around target name or special @ syntax #}
      - '{{ id_or_func }}'
          {%- else %}
      - {{ id_or_func }}
          {%- endif %}
        {%- endif %}
      {%- endfor %}
    {%- endfor %}
  {%- endfor %}
{%- endif %}

rest_cherrypy:
  port: 8000
  host: 127.0.0.1
{%- if salt['pillar.get']('debug', False) %}
  debug: True
{%- else %}
  debug: False
{%- endif %}
  disable_ssl: True
