{%- from 'nrpe/passive.jinja2' import passive_interval with context -%}

# {{ salt['pillar.get']('message_do_not_modify') }}

discourse_backup_procs:
  description: Discourse Backup Process
  command: "/usr/lib/nagios/plugins/check_procs -c 0:1 -u root -a '/etc/cron.daily/backup-discourse'"

discourse_backup:
  description: Discourse Backup Age And Size
  command: /usr/lib/nagios/plugins/check_backup.py --formula=discourse.backup --check=discourse_backup
  {{ passive_interval(12 * 60) }} {#- 12 hours #}
  arguments:
    facility: discourse
    warning: {{ salt['pillar.get']('backup:age', 48) }}
  timeout: 55
  dependencies:
    {#- no alert if load is too high #}
    - load_average
