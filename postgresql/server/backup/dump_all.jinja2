set -e

# limit resources usage
renice -n 19 -p $$ > /dev/null
ionice -c idle -p $$
XZ_DEFAULTS=--memlimit={{ salt['pillar.get']('backup:xz_memlimit', 64) }}MiB

SUFFIX="$(/usr/local/bin/backup-gen-suffix.py)"
export TERM=dumb
su - postgres -s /bin/bash -c "pg_dumpall | xz > /tmp/postgresql-all-$SUFFIX.sql.xz"
/usr/local/bin/backup-store /tmp/postgresql-all-$SUFFIX.sql.xz
